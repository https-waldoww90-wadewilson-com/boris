{% import "_includes/forms" as forms %}

{{ forms.textField( {
    label: 'Plugin Name',
    instructions: 'If you would like to rename the plugin, this is the place to do it',
    id: 'name',
    name: 'name',
    value: settings[ 'name' ]
  } )
}}

{{ forms.elementSelectField({
    label: 'Invincible Entries',
    id: 'entryIds',
    name: 'entryIds',
    elementType: craft.elements.getElementType( 'Entry' ),
    elements: entries,
    criteria: { 'kind': [], 'localeEnabled': null },
    sourceElementId: 1,
    jsClass: 'Craft.BaseElementSelectInput',
    addButtonLabel: 'Select Entries',
    limit: null,
    sources: []
}) }}

